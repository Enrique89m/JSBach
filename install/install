#!/bin/bash

# Actualizamos apt
apt update

# Instalar iw para detectar WAN wifi
apt install iw

# Instalamos Expect (automatizaci√≥n de comandos, para finalizar scr_cli)
apt install expect -y

# Instalar Socat
echo "Instalando Socat..."
apt install socat

# Instalar net-start
echo "Instalando NetStat..."
apt install net-tools

# Instalar Servidor Apache y habilitar CGI
echo "Instalando Apache..."
apt install -y apache2
a2enmod cgi
systemctl apache2 restart

# Desactivar NetworkManager
echo "Desactivando NetworkManager..."
systemctl stop NetworkManager
systemctl disable NetworkManager

